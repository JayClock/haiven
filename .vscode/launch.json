{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        
        {
            "name": "App: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/app",
            "python": "${workspaceFolder}/app/.venv/bin/python"
        },

        {
            "name": "App: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/app",
            "python": "${workspaceFolder}/app/.venv/bin/python"
        },

        {
            "name": "CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/cli/haiven_cli",
            "python": "${workspaceFolder}/cli/.venv/bin/python",
            "args": [
                // Add args for local debug run here
                "index-all-files", "${workspaceFolder}/../tmp/", 
                "--embedding-model", "ollama", 
                "--output-dir", "${workspaceFolder}/../haiven-tw-knowledge-pack/team_demo"
            ]
        }
    ]
}